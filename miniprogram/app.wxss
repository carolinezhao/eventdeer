@import './libs/iconfont.wxss';
.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    color: #222;
    padding: 20rpx 55rpx;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

/* layout */

.flex {
    display: flex;
}

.flex-col {
    display: flex;
    flex-direction: column;
}

.flex-center {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

/* color */

.theme-color {
    color: #FF7F6A;
}

.theme-bg-color {
    background-color: #FF7F6A;
}

/* common styles */

.vip {
    border: 1px solid #FF7F6A;
    border-radius: 10rpx;
    color: #FF7F6A;
    padding: 0 10rpx;
    font-size: 25rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.vip-lg {
    border: 1.5px solid #FF7F6A;
    border-radius: 10rpx;
    color: #FF7F6A;
    padding: 1.5rpx 10rpx;
    font-size: 32rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

/* button */

button {
    border-radius: 50rpx;
    width: 300rpx;
    margin: 50rpx auto;
    line-height: 2;
    border: 1px solid #dedede;
}

.primary-btn {
    color: #222;
    background-color: #fff;
    border-color: #222;
    font-size: 32rpx;
}

.lg-btn {
    width: 580rpx;
}

/* icon */

.icon-small {
    font-family: 'iconfont';
    font-size: 30rpx;
    margin-right: 10rpx;
}

.icon-big {
    font-family: 'iconfont';
    font-size: 50rpx;
}

