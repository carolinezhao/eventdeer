/**app.wxss**/

@import './libs/iconfont.wxss';

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    color: #222;
    padding: 20rpx 55rpx;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

/* icon */

.icon-small {
    font-family: 'iconfont';
    font-size: 30rpx;
    margin-right: 10rpx;
}

/* index page */

.icon-location:before {
    content: '\e614';
}

.icon-phone:before {
    content: '\e6b9';
}

/* discover and detail pages */

.icon-location-hollow:before {
    content: '\e61a';
}

.icon-clock:before {
    content: '\e622';
