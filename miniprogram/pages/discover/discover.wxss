.section-title {
    width: 100%;
    color: #8E8E93;
    padding: 10rpx 0;
}

.headline {
    width: 100%;
    border-radius: 15rpx;
    color: #fff;
    box-shadow: 5px 5px 10px 0px #dedede;
    background: linear-gradient(to bottom right, #ff5f6d, #ffc371);
}

.headline a {
    padding: 40rpx 40rpx;
    display: flex;
    flex-direction: column;
}

.title {
    font-size: 60rpx;
    padding-bottom: 20rpx;
    border-bottom: .2px solid #dedede;
}

.time {
    padding: 20rpx 0;
}

.description {
    font-size: 30rpx;
    padding: 10rpx 0;
}

.learnmore {
    font-size: 25rpx;
}