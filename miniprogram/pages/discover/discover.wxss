.section-title {
    width: 95%;
    color: #8E8E93;
    margin-bottom: 15rpx;
}

.card {
    width: 100%;
    border-radius: 15rpx;
    color: #fff;
    box-shadow: 5px 5px 10px 0px #dedede;
    background: linear-gradient(to bottom right, #ff5f6d, #ffc371);
    margin-bottom: 30rpx;
}

.card a {
    padding: 40rpx 40rpx;
    display: flex;
    flex-direction: column;
}

.title {
    font-size: 50rpx;
    padding-bottom: 20rpx;
    border-bottom: .2px solid #dedede;
    display: flex;
    align-items: center;
}

.title .vip {
    border: 1.5px solid #fff;
    border-radius: 10rpx;
    color: #fff;
    padding: 2rpx 10rpx;
    height: 90%;
    margin-right: 15rpx;
    font-size: 35rpx;
    display: inline-block;
    /* display: flex;
	flex-direction: column;
	justify-content: center; */
}

.date,
.time,
.tip {
    padding-top: 15rpx;
}

.tip {
    font-size: 25rpx;
}