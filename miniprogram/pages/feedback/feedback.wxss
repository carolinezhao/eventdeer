form {
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.title {
	font-size: 45rpx;
	margin: 30rpx 0;
}

.text {
	font-size: 35rpx;
	margin: 30rpx 0;
	line-height: 55rpx;
}

textarea {
	width: initial;
	background-color: #f0f0f0;
	padding: 20rpx;
	border-radius: 15rpx;
	border: 1px solid #dedede;
}

button {
	color: #fff;
	background-color: #4ca1af;
	border-color: #4ca1af;
}