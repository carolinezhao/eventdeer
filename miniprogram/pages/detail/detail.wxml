<view class="container">
    <view class="inner-container" data="{{event}}">
        <view class="image-container">
            <image mode="aspectFill" src="{{event.imgUrl}}"></image>
        </view>

        <view class="content">
            <view class="title">{{event.title}}
                <text class="vip" wx:if="{{event.isVIP}}">VIP</text>
            </view>
            <view>{{event.date}}</view>
            <view>
                <text class="icon-small icon-clock"></text>{{event.time}}</view>
            <view>
                <text class="icon-small icon-location-hollow"></text>{{event.location}}</view>
            <!-- text 能显示换行，view 不能 -->
            <view class="detail">
                <text>{{event.intro}}</text>
            </view>
        </view>
    </view>

    <view class="menu-entry" bindtap="openShareMenu">...</view>
    <view class="share-menu" wx:if="{{ifShowMenu}}" bindtap="closeShareMenu">
        <view class="button-container">
            <!-- 此按钮出现的场景：二维码/分享的消息卡片等 -->
            <button class="primary-btn lg-btn" bindtap="openDiscoverPage" wx:if="{{isDisplayButton}}">View All Upcoming Events</button>
            <button class="primary-btn" open-type="share"><text class="icon-small icon-share"></text>Share</button>
            <!-- 保存为图片后：保存到相册，分享到朋友圈 -->
            <button class="primary-btn md-btn" bindtap="saveAsImage"><text class="icon-small icon-save"></text>Save as Image</button>
        </view>   
    </view> 
</view>

<view class="canvas-container" wx:if="{{isDisplayCanvas}}">
    <canvas canvas-id="event-info" id="canvas" style="width: {{canvas.width}}; height: {{canvas.height}}"></canvas>
    <view class="close-button" bindtap="closeCanvas">
        <view class="icon-big icon-close"></view>
    </view>
</view>