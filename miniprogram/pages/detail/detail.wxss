.icon-small {
    color: #222;
}

.icon-big {
    color: #dedede;
}

.inner-container {
    width: 100%;
    border: 1.5px dashed #8E8E93;
    border-radius: 18rpx;
}

.image-container {
    width: 100%;
    border-radius: 16rpx 16rpx 0 0;
    overflow: hidden;
}

/* image 组件默认宽 300px，高 225px */

.image-container image {
    width: 100%;
    height: 450rpx;
}

.content {
    box-sizing: border-box;
    /* 默认为 content-box，如果没有这一项，则 100% + padding/margin 会导致超出父元素 */
    width: 100%;
    padding: 25rpx;
}

.content>view:not(.title) {
    margin-bottom: 15rpx;
    font-size: 32rpx;
}

.title {
    font-size: 48rpx;
    margin-bottom: 30rpx;
    align-items: center;
}

.vip-lg {
    margin-left: 15rpx;
}

.detail {
    margin-top: 30rpx;
    line-height: 45rpx;
}

/* operation menu */

.operation-menu {
    background-color: #7878787e;
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 999;
    align-items: center;
    justify-content: flex-end;
}

.menu-container {
    background-color: #fff;
    width: 100%;
    padding: 50rpx 0;
    justify-content: center;
}

.btn-wrap {
    width: 40%;
    align-items: center;
    margin: 0 20rpx;
}

.btn-img {
    width: 100rpx;
    height: 100rpx;
    overflow: hidden;
    padding: 0;
    border: 1px solid #222;
    border-radius: 50%;
    margin: 0;
}

.btn-img image {
    width: 100%;
    height: 100%;
}

.btn-text {
    font-size: 28rpx;
    color: #222;
    margin-top: 10rpx;
}

.menu-close {
    background-color: #fff;
    padding-bottom: 20rpx;
    width: 100%;
    font-size: 35rpx;
    color: #8E8E93;
}

/* canvas */

.canvas-container {
    background-color: rgba(66, 66, 66, 0.9);
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 999;
}

canvas {
    /* canvas 中内容的单位是 px */
    width: 300px;
    height: 450px;
    box-sizing: border-box;
    background-color: #fff;
    /* position: relative; */
}

.close-button {
    padding: 30rpx;
}