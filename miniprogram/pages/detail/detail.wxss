.icon-small {
    color: #222;
}

.icon-big {
    color: #dedede;
}

.inner-container {
    width: 100%;
    border: 1.5px dashed #8E8E93;
    border-radius: 18rpx;
}

.image-container {
    width: 100%;
    border-radius: 16rpx 16rpx 0 0;
    overflow: hidden;
}

/* image 组件默认宽 300px，高 225px */

.image-container image {
    width: 100%;
    height: 450rpx;
}

.content {
    box-sizing: border-box;
    /* 默认为 content-box，如果没有这一项，则 100% + padding/margin 会导致超出父元素 */
    width: 100%;
    padding: 25rpx;
}

.content view:not(.title) {
    margin-bottom: 15rpx;
    font-size: 32rpx;
}

.title {
    font-size: 48rpx;
    margin-bottom: 30rpx;
}

.vip {
    border: 1.5px solid #ff5f6d;
    border-radius: 10rpx;
    color: #ff5f6d;
    padding: 2rpx 10rpx;
    height: 90%;
    margin-left: 15rpx;
    font-size: 32rpx;
    display: inline-block;
}

.detail {
    margin-top: 30rpx;
    line-height: 45rpx;
}

/* share menu */

.menu-entry {
    font-size: 50rpx;
    margin-top: 20rpx;
}

.share-menu {
    background-color: #7878787e;
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 999;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
}

.button-container {
    background-color: #fff;
    width: 100%;
    padding-bottom: 50rpx;
}

/* canvas */

.canvas-container {
    background-color: rgba(66, 66, 66, 0.9);
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 999;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

canvas {
    /* canvas 中内容的单位是 px */
    width: 300px;
    height: 450px;
    box-sizing: border-box;
    background-color: #fff;
    /* position: relative; */
}

.close-button {
    padding: 30rpx;
}